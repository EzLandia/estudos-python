#nome #ph #tamanho
matogrosso = ['matogrosso', 6.8, 5]
betta = ['beta', 7, 6]
ramirezi = ['ramirezi', 7, 10]
aquario = list()
confirma = 'S'
adicionar = ''
cont = 0
lista = 0
media = 0
while confirma == 'S':
    adicionar = (input('Qual peixe adicionar ao aquario?: '))
    if adicionar == 'matogrosso':
        aquario.append(matogrosso[:])
        cont += aquario[lista][1]
        lista += 1
    elif adicionar == 'betta':
        aquario.append(betta[:])
        cont += aquario[lista][1]
        lista += 1
    elif adicionar == 'ramirezi':
        aquario.append(ramirezi[:])
        cont += aquario[lista][1]
        lista += 1
    else:
        print('Peixe não reconhecido.')
    confirma = str(input('Deseja continuar? S/N: ')).upper()
    while confirma != 'S':
        if confirma == 'N':
            for nome in range(0, len(aquario)):
                print(f'Você adicionou os seguintes peixes: ')
                print(f'{aquario[nome][0]}', end = '')
            media = cont / lista
            print(f'\nSua média de PH nesse aquario deve ser de {media:.1f}')
            break
        else:
            print('Digite apenas S ou N.')
            confirma = str(input('Deseja continuar? S/N: ')).upper()
